{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with ts-node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["src/index.ts"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "node_modules/typescript/**"],
      // "outFiles": ["${workspaceFolder}/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
